<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Controller.Product.OverviewController">
   <children>
       <SplitPane fx:id="splitPane" prefHeight="500.0" prefWidth="250.0">
          <items>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                     <TableView fx:id="productTable" prefHeight="473.0" prefWidth="286.0" BorderPane.alignment="CENTER">
                         <columns>
                             <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Nazwa" />
                             <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Cena" />
                         </columns>
                         <columnResizePolicy>
                             <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                         </columnResizePolicy>
                     </TableView>
               </center>
               <top>
                  <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Wyszukaj">
                           <FlowPane.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </FlowPane.margin>
                        </Label>
                        <TextField fx:id="filterText" alignment="CENTER">
                           <FlowPane.margin>
                              <Insets />
                           </FlowPane.margin>
                        </TextField>
                     </children>
                  </FlowPane>
               </top>
            </BorderPane>
          </items>
       </SplitPane>
   </children>
</AnchorPane>
